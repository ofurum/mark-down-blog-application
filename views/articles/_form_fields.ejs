<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-control mt-2" required value="<%= article.title %>">
    
    <label for="description" class="mt-3">Description</label>
    <textarea required name="description" id="description" class="form-control mt-2"><%= article.description %></textarea>

    <label for="Markdown" class="mt-3">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control mt-2"><%= article.markdown %></textarea>

    <a href="/" class="btn btn-secondary mt-3">Cancel</a>
    <button class="btn btn-primary mt-3" type="submit">Save</button>

    <div><%- article.sanitizedHTML %></div>
</div> 